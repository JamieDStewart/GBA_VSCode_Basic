{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        { 
            "label": "stop emulation",
            "type":"shell",
            "windows": {
                "command":"taskkill /im mGBA.exe /F"
            },
            "osx": {
                "command": "killall mGBA"
            }
        },
        {
            "label": "make debug",
            "type": "process",
            "command": "make",
            "args": ["DEBUG=1"],
            "problemMatcher": []
        },
        {
            "label": "make release",
            "type": "process",
            "command": "make",
            "args": ["DEBUG=0"],
            "problemMatcher": []
        },
        {
            //"dependsOn":"stop emulation",
            "label": "clean",
            "type": "shell",
            "command": "make clean"
        },
        {
            "label": "gdb-debug",
            "type": "shell",
            "dependsOn": ["make debug"],
            "isBackground": false,
            "windows": {
                "command": "C:/mGBA/mGBA.exe -g ${workspaceFolder}/${workspaceFolderBasename}.gba;sleep 5;echo debuggerReady"
            },
            "osx":{
                "command": "/Users/jamies/mGBA/mGBA.app/Contents/MacOS/mGBA",
                "args": ["-g", "${workspaceFolder}/${workspaceFolderBasename}.gba"]
            },
            "presentation": {
                "clear": true,
                "reveal": "always",
                "panel": "new"
            },
            "command": "debuggerReady",
            "problemMatcher": {
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*debuggerReady.*$",
                    "endsPattern": "^.*debuggerReady.*$"
                },
            }
        },
        {
            "label": "run",
            "type": "shell",
            "isBackground": true,
            "command": "C:/NO$GBADebugger/NO$GBA.exe  ${workspaceFolder}/${workspaceFolderBasename}.elf",
            "problemMatcher": []
        }
    ]
}